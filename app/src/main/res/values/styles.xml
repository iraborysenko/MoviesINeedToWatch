<resources>
    <style name="mainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/oswald_light</item>
    </style>

    <style name="LangSwitch.text" parent="@android:style/TextAppearance" >
        <item name="android:textColor">?attr/colorSearchScreenBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="SearchEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">?attr/colorSearchScreenText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:text">""</item>
        <item name="android:textColorLink">?attr/colorMainApp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLightGrey</item>
    </style>

    <style name="NumberPickerTheme" parent="Base.Theme.App">
        <item name="android:textColorPrimary">?attr/colorWatchedTab</item>
        <item name="android:background">?attr/colorWatchedTabBackground</item>
    </style>
</resources>
