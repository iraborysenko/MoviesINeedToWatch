<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkGreen</item>
        <item name="fontFamily">@font/comic_relief</item>
        <item name="android:windowBackground">@color/colorBeige</item>
    </style>

    <style name="LangSwitch.text" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/colorBeige</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>
