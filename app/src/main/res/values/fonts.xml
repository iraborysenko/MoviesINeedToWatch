<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!---->
    <!--fonts type-->
    <style name="TextRegular" parent="@android:style/TextAppearance">
    </style>

    <style name="TextBold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItalic" parent="@android:style/TextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextBoldItalic" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!---->
    <!--colors for each fonts-->
    <!--regular-->
    <style name="TextRegular.MainTextColor">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <!--bold-->
    <style name="TextBold.MainApp">
        <item name="android:textColor">@color/colorMainApp</item>
    </style>

    <style name="TextBold.MainAppMiddle">
        <item name="android:textColor">@color/colorMainAppMiddle</item>
    </style>

    <style name="TextBold.MainAppLight">
        <item name="android:textColor">@color/colorMainAppLight</item>
    </style>

    <style name="TextBold.SearchScreen">
        <item name="android:textColor">@color/colorSearchScreen</item>
    </style>

    <style name="TextBold.SearchScreenMiddle">
        <item name="android:textColor">@color/colorSearchScreenMiddle</item>
    </style>

    <style name="TextBold.ToWatchTab">
        <item name="android:textColor">@color/colorToWatchTab</item>
    </style>

    <style name="TextBold.ToWatchTabMiddle">
        <item name="android:textColor">@color/colorToWatchTabMiddle</item>
    </style>

    <style name="TextBold.WatchedTab">
        <item name="android:textColor">@color/colorWatchedTab</item>
    </style>

    <style name="TextBold.WatchedTabMiddle">
        <item name="android:textColor">@color/colorWatchedTabMiddle</item>
    </style>

    <style name="TextBold.MainTextColor">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <!--italic-->
    <style name="TextItalic.MainTextColor">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <!--bold italic-->
    <style name="TextBoldItalic.MainTextColor">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="TextBoldItalic.ToWatchTabMiddle">
        <item name="android:textColor">@color/colorToWatchTabMiddle</item>
    </style>

    <style name="TextBoldItalic.WatchedTabMiddle">
        <item name="android:textColor">@color/colorWatchedTabMiddle</item>
    </style>

    <!---->
    <!--size for each color-->
    <!--bold sizes-->
    <style name="TextBold.MainApp.30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBold.MainAppLight.18">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="TextBold.ToWatchTab.30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBold.ToWatchTab.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold.ToWatchTabMiddle.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.ToWatchTabMiddle.16">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextBold.WatchedTab.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold.WatchedTabMiddle.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.WatchedTabMiddle.16">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextBold.SearchScreen.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold.SearchScreenMiddle.16">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextBold.MainTextColor.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.MainTextColor.16">
        <item name="android:textSize">16sp</item>
    </style>

    <!--regular sizes-->
    <style name="TextRegular.MainTextColor.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRegular.MainTextColor.16">
        <item name="android:textSize">16sp</item>
    </style>

    <!--bold-italic sizes-->
    <style name="TextBoldItalic.MainTextColor.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBoldItalic.ToWatchTabMiddle.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBoldItalic.ToWatchTabMiddle.16">
        <item name="android:textSize">16sp</item>
    </style>

    <!--italic sizes-->
    <style name="TextItalic.MainTextColor.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextItalic.MainTextColor.16">
        <item name="android:textSize">16sp</item>
    </style>
</resources>