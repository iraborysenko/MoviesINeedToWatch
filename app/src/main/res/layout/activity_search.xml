<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aurora.moviesineedtowatch.ui.SearchActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:id="@+id/search_query"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColorLink="?attr/colorPrimaryDark"
            tools:ignore="LabelFor" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/search_query"
            android:background="@null"
            app:srcCompat="@drawable/search"
            android:contentDescription="@string/go" />

        <Switch
            android:id="@+id/switchToEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/search_query"
            android:layout_alignBottom="@+id/search_query"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:switchTextAppearance="@style/LangSwitch.text"
            android:showText="true"
            android:textOff="@string/ru"
            android:textOn="@string/en"
            android:thumb="@drawable/switch_language"
            android:track="@drawable/switch_track" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:fillViewport="true"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll">

            <TableLayout
                android:id="@+id/searchTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_query"
                android:layout_marginTop="15dp"
                tools:ignore="ObsoleteLayoutParam">
            </TableLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>