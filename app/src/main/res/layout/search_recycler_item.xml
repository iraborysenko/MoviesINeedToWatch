<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/s_movie_poster"
        android:layout_width="123dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/s_movie_original_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/movie_poster" />

    <TextView
        android:id="@+id/s_movie_title"
        style="@style/TextBold.Blue.20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/s_movie_original_title"
        style="@style/TextItalic.DarkGrey.16"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/s_movie_genres"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/s_movie_genres"
        style="@style/TextBold.BlueLight.16"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/s_movie_poster"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/s_movie_year"
        style="@style/TextBold.DarkGrey.16"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/s_movie_tmdb"
        style="@style/TextBold.DarkGrey.18"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/s_movie_genres"
        android:layout_marginEnd="12dp"
        android:gravity="center" />

</RelativeLayout>