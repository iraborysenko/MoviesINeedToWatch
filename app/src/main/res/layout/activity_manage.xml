<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="391dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/manage_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="149dp"
            android:layout_marginTop="8dp"
            android:text="@string/editing_movie" />

        <TextView
            android:id="@+id/title_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/manage_movie_title"
            android:layout_below="@+id/manage_movie_title"
            android:layout_marginTop="18dp"
            android:text="@string/title" />

        <TextView
            android:id="@+id/genres_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title_movie"
            android:layout_below="@+id/title_movie"
            android:layout_marginTop="12dp"
            android:text="@string/genres" />

        <TextView
            android:id="@+id/imdb_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_movie"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/manage_movie_title"
            android:text="@string/imdb" />

        <TextView
            android:id="@+id/year_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imdb_movie"
            android:layout_below="@+id/genres_movie"
            android:text="@string/year" />

        <ImageView
            android:id="@+id/poster_movie"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/title_movie"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/noposter"
            android:contentDescription="@string/movie_poster" />

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/year_movie"
            android:layout_below="@+id/poster_movie"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="8dp"
            android:text="@string/adding_movie_to_watched" />

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/poster_movie"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/comment"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/my_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imdb_movie"
            android:layout_centerVertical="true"
            android:text="@string/my_rating" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/add_title"
            android:layout_below="@+id/edit_comment"
            android:layout_marginTop="8dp"
            android:text="@string/add" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add_button"
            android:layout_below="@+id/add_button"
            android:text="@string/edit_movie_info" />

        <TextView
            android:id="@+id/tagline_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edit_comment"
            android:layout_below="@+id/edit_title"
            android:text="@string/tagline" />

        <TextView
            android:id="@+id/runtime_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tagline_movie"
            android:layout_below="@+id/tagline_movie"
            android:layout_marginTop="8dp"
            android:text="@string/runtime" />

        <TextView
            android:id="@+id/overview_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/runtime_movie"
            android:layout_below="@+id/runtime_movie"
            android:layout_marginTop="9dp"
            android:text="@string/overview" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagline_movie"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/manage_movie_title"
            android:text="@string/edit" />

        <TextView
            android:id="@+id/deleting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/add_button"
            android:layout_below="@+id/overview_movie"
            android:layout_marginTop="12dp"
            android:text="@string/deleting_movie" />

        <TextView
            android:id="@+id/question_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tagline_movie"
            android:layout_below="@+id/deleting_title"
            android:layout_marginTop="16dp"
            android:text="@string/delete_question" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edit_button"
            android:layout_below="@+id/deleting_title"
            android:contentDescription="@string/delete_button"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>